<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_button_red"
            android:text="@string/main_step1_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/step1_button"
            />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_button_red"
            android:text="@string/main_step2_text"
            android:textAllCaps="false"
            android:id="@+id/step2_button"
            android:textColor="@color/white" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step_text_frame_layout"
        android:background="@drawable/text_board_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step_1_text"
            android:paddingBottom="65dp"
            android:textColor="@color/white"
            android:text="@string/main_step1_information"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step_2_text"
            android:visibility="gone"
            android:paddingBottom="65dp"
            android:textColor="@color/white"
            android:text="@string/main_step2_information"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step1_go_to_setting_button"
            android:text="@string/main_go_to_setting"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_button_4pt"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step2_go_to_setting_button"
            android:visibility="gone"
            android:text="@string/main_go_to_setting"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_button_4pt"
            />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/main_set_the_edge"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_4pt"
            android:text="@string/main_edge1_button_not_activated"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_4pt"
            android:text="@string/main_edge2_button_not_activated"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_board_120dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="setting"
            />
    </FrameLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_4pt"
        android:text="This is the test text"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_green_button"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_red_button"
        android:text="Not OK"
        android:textAllCaps="false"
        android:textColor="@color/white" />





</LinearLayout>
