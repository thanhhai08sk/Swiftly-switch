<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:paddingBottom="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_above="@id/intro_image"
        android:text="@string/easily_navigation"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-bolt"
        android:textSize="24dp"
        android:paddingBottom="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/intro_image"
        android:layout_width="216dp"
        android:layout_height="384dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/note_keep_your_finger_on_screen_unless_finish_action"
        android:layout_below="@id/intro_image"
        android:gravity="center"
        android:textSize="16dp"
        android:fontFamily="sans-serif-light"
        android:paddingTop="16dp"
        />


    <ImageView
        android:id="@+id/intro_hand"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/hand_resized"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16dp"
        android:id="@+id/textGuide"
        android:textColor="@color/white"
        tools:text="Home"
        android:visibility="gone"
        android:padding="8dp"
        android:background="@color/text_guide_background"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/intro_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
