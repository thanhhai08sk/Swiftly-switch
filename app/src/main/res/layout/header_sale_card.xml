<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_card"
    android:id="@+id/review_request"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*HOT* 67% Off When Upgrade to Pro. Only Available for Limited Time!"
        android:textSize="16sp"
        android:textColor="@color/text_primary_dark"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
        />

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        >
        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_close"
            android:textColor="@color/grey_icon"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            />
        <Button
            android:id="@+id/upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_to_pro"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"

            />
    </android.support.v7.widget.ButtonBarLayout>


</LinearLayout>
